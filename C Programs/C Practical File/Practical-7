#include <stdio.h>

#define RATE_OF_INTEREST 0.05 // symbolic constant for rate of interest (5% in this case)
int main() {
float principal, time, simple_interest;
printf("Enter the principal amount: ");
scanf("%f", &principal);
printf("Enter the time (in years): ");
scanf("%f", &time);
    // Calculate simple interest
simple_interest = (principal * time * RATE_OF_INTEREST);
printf("Simple Interest: %.2f\n", simple_interest);
printf("Principal Amount: %.2f\n", principal);
printf("Time (in years): %.2f\n", time);
printf("Rate of Interest: %.2f%%\n", RATE_OF_INTEREST * 100);
printf("Aditya Mehta BCA Shift-1 Section A\n");
return 0;
}